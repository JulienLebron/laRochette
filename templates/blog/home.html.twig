{% extends 'base.html.twig' %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="col-md-5 mx-auto alert alert-success text-center mb-5">
			üåê
			{{ message }}
		</div>
	{% endfor %}
	<div class="container pt-5 d-flex container-title-home">
		<h1>Bienvenue sur demoBlog : le site d'actualit√© des jeux vid√©o et du high-tech.</h1>
	</div>
	<div class="container my-3">
		<h2>En ce moment</h2>
	</div>
	<div class="container d-flex justify-content-between flex-wrap">
		{% for article in articles %}
			<div class="card mb-5" style="width: 275px; height: 400px; background: no-repeat center/cover url('{{ asset('images/articles/' ~ article.image) }}')">
				<a class="card-link" href="{{ path('blog_show', {'id': article.id }) }}">
					<span class="badge rounded-pill text-bg-primary">{{ article.category }}</span>
					<div class="card-body">
						<h5 class="card-title">{{ article.title |slice(0,80) }}...</h5>
						<small>Ecrit le
							{{ article.createdAt | date('d/m/Y') }}</small>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>


{% endblock body %}
