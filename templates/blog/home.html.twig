{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="col-md-5 mx-auto alert alert-success text-center mb-5">
            üåê {{ message }}
        </div>
    {% endfor %}

    <div class="container d-flex justify-content-around flex-wrap">
        {% for article in articles %}
            <div class="card mb-5" style="width: 225px; height: 350px; background: no-repeat center/cover url('{{ article.image }}')">
                <a class="card-link" href="{{ path('blog_show', {'id': article.id }) }}">
                <span class="badge rounded-pill text-bg-primary">NEWS JEU</span>
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title |slice(0,40) }}...</h5>
                        <small>Ecrit le {{ article.createdAt | date('d/m/Y') }}</small>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>


{% endblock body %}
